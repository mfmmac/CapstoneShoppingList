@model CapstoneShoppingList.Models.ShoppingCartModel
@{
    ViewData["Title"] = "ShoppingCart";
}

<h1>Shopping Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <h4>Total $@Model.Total.ToString()</h4>
</p>

<div>
    <a asp-action="Index"><input type="submit" value="Continue Shopping" class="btn btn-primary" /></a>
    <br />
    <br />
    <a asp-action="Checkout"><input type="submit" value="Checkout" class="btn btn-primary" /></a>
    

</div>




