@model IEnumerable<CapstoneShoppingList.Models.Products>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                <a asp-action="ShoppingCart" asp-route-id="@item.ProductID"><input type="submit" value="Add" class="btn btn-primary" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Checkout"><input type="submit" value="Checkout" class="btn btn-primary" /></a>
</div>
